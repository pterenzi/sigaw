<%= form_for :user, :url => { :action => "update_password", :id => current_user.id } do |f| %>

<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "erro(s)") %> não permite(m) que este registro seja gravado/alterado:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table cellspacing="5" align='center'>

<tr align="left">
<td>Usuário:  <%= current_user.mail %> - <%= current_user.name %><br><br></td>
</tr>

<tr align="left">
<td>Senha:<br>
<%= f.password_field :password %></td>
</tr>

<tr align="left">
<td>Confirma Senha:<br>
<%= f.password_field :password_confirmation %></td>
</tr>
</table>

<br>
<table cellspacing="5" align='center'>
<tr>
<td><%= f.submit 'Gravar'%></td>
</tr>
</table>

<% end %>
